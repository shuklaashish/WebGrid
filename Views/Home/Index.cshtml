                                   alert($(this).attr('data-id'));
                                   var empdId = $(this).attr('data-id');
                                   $.ajax({
                                       url: "/api/values/" + empdId,
                                       type: "DELETE",
                                       success: function (data) {
                                           $('#tblEmployees').find("tr:gt(0)").remove();
